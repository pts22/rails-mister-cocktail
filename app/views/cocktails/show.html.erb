<div class="col-sm-offset-4 col-sm-4">
  <div id="showbanner">
    <h2><%= @cocktail.name %></h2>
      <div id="showimage"><%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %></div>
      <p><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail)%></p>

    <% @doses.each do |dose| %>
        <div class="product">
          <%=link_to new_cocktail_dose_path(@cocktail) do%><div class='product-upvote'>
            <i class="fas fa-plus"></i>
            <div class='product-count'></div></i>
            </div>
        <% end %>

        <div class='product-body'>
          <h3><%= dose.ingredient[:name] %></h3>
          <p><%= dose.description %> </p>
        </div>

        <ul class="list-inline product-controls">
          <li> <%=link_to dose_path(dose), method: :delete,
               data: { confirm: "Are you sure?" }, class:"more" do%>
               <i class="fas fa-trash-alt"></i>
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>





